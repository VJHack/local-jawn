{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "jsx": "react-native",
    "strict": true,
    "baseUrl": "../",                  // Points to /repoRoot
    "paths": {
      "llama.rn": ["src/index"],  // Entry point
      "llama.rn/*": ["src/*"]        // Sub-paths
    },
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules"]
}
